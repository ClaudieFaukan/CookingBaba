{% extends 'admin/admin.html.twig' %}

{% block title %}Toutes les recettes{% endblock %}

{% block body %}
<ul>
<button class="btn btn-success mb-3">
    <a href="{{ path('admin.recipe.create') }}" class="text-white text-decoration-none">Créer une nouvelle recette</a>
</button>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.content|length > 100 ? recipe.content|slice(0, 100) ~ '...' : recipe.content }}</td>
                <td>
                    <a href="{{ path('admin.recipe.edit', {'id': recipe.id}) }}" class="btn btn-primary btn-sm">Éditer</a>
                    <form action="{{ path('admin.recipe.delete', {'id': recipe.id}) }}" method="post" style="display:inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
                        <button class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette recette ?');">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune recette trouvée.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
